{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "outDir": "./dist",
    "paths": {
      "@src/*": ["*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/types/**/*.d.ts",
    "src/plugins/auth.plugin.ts"
  ]
}
